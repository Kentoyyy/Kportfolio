<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".AboutFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#d9727f"
        app:cardCornerRadius="180dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#d9727f">


        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:elevation="20dp"
            app:cardCornerRadius="180dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_fileName="profile.json"

                app:lottie_autoPlay="true"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="130dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="180dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="100dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="180dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="230dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="180dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="7dp"
            android:layout_height="50dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="240dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="7dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="240dp"
            app:cardBackgroundColor="#FAFAFA"

            app:cardCornerRadius="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="7dp"
            android:layout_height="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="250dp"
            app:cardBackgroundColor="#FAFAFA"

            app:cardCornerRadius="10dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/shareinfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_share_24" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="375dp"
            android:background="@drawable/philippines" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="370dp"
            android:text="Alcantara, Ken"
            android:textColor="#434343"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtname"
            android:layout_centerHorizontal="true"
            android:text="Android Developer"
            android:textColor="#434343" />


        <TextView
            android:id="@+id/txtyears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="460dp"
            android:text="1 Year"
            android:textColor="#434343"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtyears"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="3dp"
            android:text="Experience"
            android:textColor="#434343" />


        <View
            android:layout_width="0.7dp"
            android:layout_height="60dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="460dp"
            android:background="#434343" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:text="19"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtyears"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Age"
            android:textColor="#434343" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="60dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="460dp"
            android:background="#434343" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="460dp"
            android:text="None"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtyears"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="3dp"
            android:text="Degree"
            android:textColor="#434343" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:text="I am currently taking Computer Science with a bit of experience in mobile application. I've been building projects with small teams and I am looking for a role where I can grow,learn and having exposure with other skilled members"
                android:textColor="#434343"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


        <Button
            android:id="@+id/BtnContact"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="110dp"
            android:background="@drawable/round_corner"
            android:elevation="2dp"
            android:text="Contact"
            android:textColor="#434343" />


    </RelativeLayout>

</FrameLayout>